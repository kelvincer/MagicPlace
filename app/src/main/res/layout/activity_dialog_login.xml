<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="24dp">

    <TextView
        android:id="@+id/txv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:text="Debes iniciar sesiÃ³n para guardar tus fotos"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="22dp"
        android:background="#ededed"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txv_title">

        <ImageButton
            android:id="@+id/igb_google_login"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#d62d20"
            android:foreground="?selectableItemBackground"
            android:onClick="loginWithGoogle"
            android:src="@drawable/ic_google" />

        <FrameLayout
            android:id="@+id/fml_email_login"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:background="#FFF"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?selectableItemBackground"
            android:onClick="registerWithEmail"
            android:padding="8dp">

            <ImageButton
                android:id="@+id/igb_email_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:src="@drawable/ic_email" />

        </FrameLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>